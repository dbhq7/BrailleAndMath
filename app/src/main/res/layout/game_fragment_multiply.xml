<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="1"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button1"
        android:background="#4B0082"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="Key 1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="2"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button2"
        android:background="#4B0082"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="Key 2"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="3"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button3"
        android:background="#4B0082"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Key 3"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="4"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button4"
        android:background="#4B0082"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginBottom="10dp"
        android:contentDescription="Key 4"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="5"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button5"
        android:background="#4B0082"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginBottom="10dp"
        android:contentDescription="Key 5"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="6"
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/button6"
        android:background="#4B0082"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Key 6"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot1"
        android:src="@drawable/braille_dot_off"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/dot2"
        android:layout_alignStart="@+id/dot2"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot2"
        android:src="@drawable/braille_dot_off"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/dot3"
        android:layout_alignStart="@+id/dot3"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot3"
        android:src="@drawable/braille_dot_off"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot4"
        android:src="@drawable/braille_dot_off"
        android:layout_alignBottom="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot5"
        android:src="@drawable/braille_dot_off"
        android:layout_alignBottom="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot6"
        android:src="@drawable/braille_dot_off"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:layout_marginBottom="10dp"
        android:contentDescription="Dot 6"/>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:id="@+id/equation2"
        android:layout_above="@+id/nextbuttonmultiply"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/nextbuttonmultiply"
        android:layout_above="@+id/dot1"
        android:layout_centerHorizontal="true"
        android:contentDescription="Next Question"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gameinstruction"
        android:id="@+id/GameInstruction"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/gameinstruction"/>


</RelativeLayout>